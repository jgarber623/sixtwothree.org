<%- @page_title = 'Log In' -%>

<header class="content-header">
	<h1>Log In</h1>
</header>

<%= form_tag Rails.application.config.authorization_endpoint, method: 'get' do %>
	<%= hidden_field_tag :client_id, root_url %>
	<%= hidden_field_tag :redirect_uri, auth_url %>

	<%= label_tag :me, 'URL' %>

	<div class="inline-form-fields">
		<%= url_field_tag :me, nil, placeholder: 'http://â€¦', required: true %>
		<button type="submit">Submit</button>
	</div>
<% end %>
