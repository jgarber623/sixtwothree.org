<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

	{% assign posts = site.categories.blog %}

	<id>{{ site.url }}/</id>
	<title>{{ site.name | xml_escape }}: Posts</title>
	<subtitle>{{ site.description | xml_escape }}</subtitle>
	<link rel="self" href="{{ site.url }}/blog/index.atom" />
	<link href="{{ site.url }}/blog" />
	<updated>{{ posts.first.date | date: '%Y-%m-%dT%H:%M:%SZ' }}</updated>
	<author>
		<name>{{ site.author.name }}</name>
		<email>{{ site.author.email }}</email>
	</author>
	<rights>{{ site.license.title | xml_escape }}</rights>

	{% for post in posts limit: 10 %}
		<entry>
			<id>{{ site.url }}{{ post.url }}</id>
			<title>{{ post.title | xml_escape }}</title>
			<link href="{{ site.url }}{{ post.url }}" />
			<updated>{{ post.date | date: '%Y-%m-%dT%H:%M:%SZ' }}</updated>
			<summary>{{ post.excerpt | xml_encode }}</summary>
			<content type="html">{{ post.content | escape }}</content>
			{% for tag in post.tags %}
				<category term="{{ tag | xml_encode }}" />
			{% endfor %}
		</entry>
	{% endfor %}
</feed>