#!/usr/bin/env sh

set -e

cmd=$*

container_name="jgarber623/sixtwothree-org-app"
container_id=$(docker ps --no-trunc --filter ancestor=${container_name} --format {{.ID}})

if [ -z "$cmd" ]; then
  echo "[ bin/exec ] ðŸš¨ No command specified!"
  exit 1
fi

if [ -z $container_id ]; then
  echo "[ bin/exec ] ðŸš¨ Couldn't find a container named \"$container_name.\" Have you run \"bin/start\" in another Terminal?"
  exit 1
else
  echo "[ bin/exec ] ðŸ¤– Executing \"$cmd\" inside container with ID = $container_id..."
  docker exec -it $container_id $cmd
fi
